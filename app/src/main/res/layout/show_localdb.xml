<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:padding="64dip">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <TextView
            android:layout_marginTop="15dip"
            android:layout_width="200dp"
            android:layout_height="44dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="ローカルDBの中身"
            android:id="@+id/textView3"
            android:layout_gravity="center_horizontal"
            />
    </FrameLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/listView2"
        android:layout_gravity="center"
        android:choiceMode="multipleChoice" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全件削除"
            android:id="@+id/button1"
            android:layout_gravity="center_horizontal|bottom"
            android:onClick="onClickResetDatabase"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="期間指定で表示"
            android:id="@+id/button2"
            android:layout_gravity="center_horizontal|bottom"
            android:onClick="onClickGetBetween"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="リクエスト表示"
            android:id="@+id/button3"
            android:layout_gravity="center_horizontal|bottom"
            android:onClick="onClickGetBetweenReputation"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ダミーデータ挿入"
            android:id="@+id/button4"
            android:layout_gravity="center_horizontal|bottom"
            android:onClick="onClickSaveDummy"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新規登録"
            android:id="@+id/button5"
            android:layout_gravity="center_horizontal|bottom"
            android:onClick="onClickSaveJSONArray"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="評価する"
            android:id="@+id/button6"
            android:layout_gravity="center_horizontal|bottom"
            android:onClick="onClickSaveEvaluation"
            />
    </LinearLayout>

</LinearLayout>