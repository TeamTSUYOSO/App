<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    tools:context="jp.ac.titech.itpro.sdl.tsuyoso2.recipeTodayActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/resu"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:id="@+id/resu"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="64dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="レシピ名：ハンバーグ"
                android:id="@+id/recipe_name"
                android:textSize="32dp"
                android:layout_gravity="center_horizontal" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:src="@drawable/fork_spoon"
                    android:layout_height="32dp"
                    android:layout_width="32dp"
                    android:id="@+id/genre_item"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ジャンル:"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/recipe_genre_name" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ジャンル名"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/recipe_genre" />
            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>

    <ImageView
        android:src="@drawable/hamburg"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:layout_width="497dp"
        android:layout_height="214dp"
        android:id="@+id/imageView"
        android:layout_weight="0.09"
        android:layout_marginTop="32dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:src="@drawable/circle"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/circle1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="調理時間"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/recipe_cooking_time"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:src="@drawable/circle"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/circle2"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="カロリー"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/recipe_calorie"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:src="@drawable/circle"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/circle3"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="価格"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/recipe_price"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="100dp">

            <!--
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="何人前"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/recipe_serving_num" />
            -->
            <ListView
                android:layout_width="wrap_content"
                android:layout_height="230dp"
                android:id="@+id/recipe_ingredients" />

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="179dp"
                android:id="@+id/recipe_instructions"
                android:layout_gravity="center_horizontal|top" />


        </LinearLayout>
    </ScrollView>

    <ImageView
        android:src="@drawable/okan_houkoku"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_gravity="right"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="16dp"
        android:onClick="onClickMoveToEvaluate"
        />

</LinearLayout>